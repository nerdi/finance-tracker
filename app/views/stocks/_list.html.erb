<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Symbol</th>
      <th>Current Price</th>
      <% if @user.id == current_user.id %>
      <th>Stock Id</th>
      <th>User Id</th>
      <th>Actions</th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% @user_stocks.each do |user_stock| %>
      <tr>
        <td>
          <%= user_stock.stock.name %>
        </td>
        <td>
          <%= user_stock.stock.ticker %>
        </td>
        <td>
          <%= user_stock.stock.last_price %>
        </td>
        <td>
          <%= user_stock.stock_id %>
        </td>
        <td>
          <%= user_stock.user_id %>
        </td>

        <td>
        <% if @user.id == current_user.id %>
          <%= link_to "Delete", user_stock_path(user_stock), :method => :delete, :data => {:confirm => "Are you sure you want to remove this stock from your stocks?"}, :class => "btn btn-xs btn-danger" %>
        <% end %>
      </td>
      </tr>
    <% end %>
  </tbody>
</table>
